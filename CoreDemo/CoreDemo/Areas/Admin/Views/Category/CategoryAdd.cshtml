@model EntityLayer.Concrete.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="text-align:center">Yeni Kategori Ekle</h1>

<form asp-controller="Category" asp-action="CategoryAdd" asp-area="Admin" method="post">

    <label for="validationCustom01">Kategori Adı</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br>

    <label for="validationCustom02">Kategori Açıklaması</label>
    <textarea asp-for="Description" class="form-control" rows="5" cols="3"></textarea>

    <span asp-validation-for="Description" class="text-danger"></span>
    <br>

    <button type="submit" class="btn btn-primary submit mb-4">Ekle</button>

</form>


