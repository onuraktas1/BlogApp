@model UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>WriterEditProfile</h1>

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
                <br>
                @* @Html.HiddenFor(x => x.Id, new { @class = "form-control" }) *@
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        <input type="text" asp-for="NameSurname" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Kullanıcı Adı</label>
                        <input type="text" asp-for="UserName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        <input type="email" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Yeni Şifreniz</label>
                        <input type="password" asp-for="Password" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Fotoğraf Yolu</label>
                        <input type="text" asp-for="ImageUrl" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">İptal</button>
                </form>
            </div>
        </div>
    </div>
}