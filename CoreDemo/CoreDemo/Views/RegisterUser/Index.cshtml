@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>

            <h3 class="logo-name">Blog</h3>

        </div>
        <h3>Register to IN+</h3>
        <p>Yeni Hesap Oluşturun</p>
        <form class="m-t" role="form" asp-action="Index">
            <div class="form-group">
                <span asp-validation-for="NameSurname" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="NameSurname" placeholder="Adınız Soyadınız">
            </div>
            <div class="form-group">
                <span asp-validation-for="Mail" class="text-danger"></span>
                <input type="email" class="form-control" placeholder="Email" asp-for="Mail">
            </div>
            <div class="form-group">
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName" >
            </div>
            <div class="form-group">
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="password" class="form-control" placeholder="Şifre" asp-for="Password" required="">
            </div>
            <div class="form-group">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword" required="">
            </div>
            <div class="form-group">
                <div class="checkbox i-checks"><label> <input type="checkbox" required=""><i></i> Kullanım Şartlarını Okudum. Kabul Ediyorum </label></div>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

            <p class="text-muted text-center"><small>Bir Hesabınız Var Mı?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Giriş Sayfası</a>
            
            <div class="text-danger" asp-validation-summary="ModelOnly">
                
            </div>
        </form>
        <p class="m-t"> <small>Blog Projesi @DateTime.Now.Year</small> </p>
    </div>
</div>

<!-- Mainly scripts -->
<script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
<script src="~/inspinia-gh-pages/js/popper.min.js"></script>
<script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
<!-- iCheck -->
<script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
<script>
    $(document).ready(function(){
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
    });
</script>
</body>

</html>
